<Window x:Class="VirtualDisks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VirtualDisks" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
  <Grid Margin="4">
    <ListBox Name="listBox" ItemsSource="{Binding Records}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding ShortName}" Width="120"/>
            <TextBlock Text="{Binding Date}" Width="80"/>
            <TextBlock Text="{Binding Path}" Width="30"/>
            <TextBlock Text="{Binding Size}" Width="60" TextAlignment="Right"/>
            <CheckBox IsChecked="{Binding Mounted}" Margin="10,2,2,2"/>
            <TextBlock Text="{Binding NewPath}" Width="30" TextAlignment="Center"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</Window>
